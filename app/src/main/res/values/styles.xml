<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimationPreviewHorizon">
        <item name="android:windowEnterAnimation">@anim/pop_push_right_in_x</item>
        <item name="android:windowExitAnimation">@anim/pop_push_right_out_x</item>
    </style>

    <style name="AnimationPreviewVertical">
        <item name="android:windowEnterAnimation">@anim/pop_push_up_in_y</item>
        <item name="android:windowExitAnimation">@anim/pop_push_down_out_y</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

  <style name="AnimationPreviewCombination">
    <item name="android:windowEnterAnimation">@anim/scale_move_in</item>
  </style>


</resources>
